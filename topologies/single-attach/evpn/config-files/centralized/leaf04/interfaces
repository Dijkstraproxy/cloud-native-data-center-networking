auto all

iface lo inet loopback
  address 10.0.0.14/32
  vxlan-local-tunnelip 10.0.0.14

iface mgmt
  address 127.0.0.1/8
  vrf-table auto

iface eth0 inet dhcp
  vrf mgmt

# uplinks
iface swp1
  mtu 9216

iface swp2
  mtu 9216

# uplinks
iface swp3
  mtu 9000
  post-up ip link set promisc on dev swp3

iface swp4
  mtu 9000
  post-up ip link set promisc on dev swp4

# bridge to hosts
iface swp5
  post-up ip link set promisc on dev swp5
  mtu 9000
  bridge-access 24

# Define the bridge for STP
iface bridge
  bridge-vlan-aware yes
  # bridge-ports includes all ports related to VxLAN and CLAG.
  # does not include the Peerlink.4094 subinterface
  bridge-ports swp5 vni24
  bridge-vids 24

# VxLAN Tunnel for Server1-Server3 (Vlan 13)
iface vni24
  mtu 9000
  vxlan-id 24
  bridge-access 24
  bridge-learning off
  bridge-arp-nd-suppress on

iface vlan24
    mtu 9000
    vlan-id 24
    vlan-raw-device bridge
    vrf evpn-vrf
